<!DOCTYPE html>
<html lang="en">
<head>

    <title>
        {{store_name}}
        {{! Add the label of the current navigation item on list pages }}
        {{#list_page}}{{#navigation}}{{#is_current}}- {{label}}{{/is_current}}{{/navigation}}{{/list_page}}
        {{! Add the product title on product pages }}
        {{#product_page}}{{#product}}- {{title}}{{/product}}{{/product_page}}
        {{! Add "About" on the about page }}
        {{#about_page}}- {{#lang}}About{{/lang}}{{/about_page}}
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <link href="{{assets_url}}/771/css/anythingslider.css" rel="stylesheet" type="text/css">
    <link href="{{assets_url}}/shared/css/base.css" rel="stylesheet" type="text/css">
    <link href='http://fonts.googleapis.com/css?family=Asap:400,700' rel='stylesheet' type='text/css'>
    <link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

    <link href="/style.css" rel="stylesheet" type="text/css">
    <link href="/dropkick.css" rel="stylesheet" type="text/css">

    <!--[if lt IE 9]>
    <script src="{{assets_url}}/shared/js/html5shiv.js"></script>
    <![endif]-->
</head>
<body>

<header class="container">

    <a class="logotype" href="{{store_url}}">
        {{#logotype}}
            <img src="{{url-300}}" alt="{{store_name}}">
        {{/logotype}}
        <span class="store_name">
            {{store_name}}
        </span>
    </a>

    <div class="burger">
        <span class="line"></span>
        <span class="line"></span>
        <span class="line"></span>
    </div>

    <div class="full_navigation">

        <nav class="main_navigation {{#navigation}}{{#is_current}}{{#has_children}}got_subnavigation{{#children}}{{#is_current}} child_active{{/is_current}}{{/children}}{{/has_children}}{{/is_current}}{{/navigation}}">
            <ul>
                <li class="navigation_item {{#list_page}}{{#no_current_navigation}}selected{{/no_current_navigation}}{{/list_page}}">
                    <a href="/">
                        <i class="icon-th"></i> &nbsp;{{#lang}}All items{{/lang}}
                    </a>
                </li>
                {{#navigation}}
                <li class="navigation_item {{#is_current}}selected{{/is_current}}">
                    <a href="{{url}}">
                        {{label}}
                    </a>
                </li>
                {{/navigation}}

                <li class="store_link {{#about_page}}selected{{/about_page}}">
                    <a href="/about">
                        <i class="icon-info-sign"></i> &nbsp;{{#lang}}About{{/lang}}
                    </a>
                </li>

                {{#store_blog_url}}
                <li class="store_link">
                    <a href="{{store_blog_url}}" target="_blank">
                        <i class="icon-globe"></i> &nbsp;{{#lang}}Blog{{/lang}}
                    </a>
                </li>
                {{/store_blog_url}}

                <li class="search-item">
                    <a href="#" id="search-trigger">
                        <i class="icon-search"></i>
                    </a>
                </li>
            </ul>
        </nav>

        {{#navigation}}
            {{#is_current}}
                {{#has_children}}
                    <nav class="sub_navigation">
                        <ul>
                            {{#children}}
                                <li {{#is_current}} class="selected"{{/is_current}}>
                                    <a href="{{url}}">
                                        {{label}}
                                    </a>
                                </li>
                            {{/children}}
                        </ul>
                    </nav>
                {{/has_children}}
            {{/is_current}}
        {{/navigation}}

    </div>
</header>

<div class="container">
    <div id="search_container">
        {{{search}}}
    </div>
    <div class="content_container">
        {{{yield}}}
    </div>
</div>


<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="{{assets_url}}/771/jquery.dropkick-1.0.0.js"></script>
<script>
$('.tictail_variations_select').dropkick({
    width: 160,
    height: 30
});
</script>

<script src="{{assets_url}}/shared/js/jquery.masonry.2.1.03.min.js"></script>
<script>

function generateMasonry(container) {
    container.imagesLoaded(function() {
        var list = this,
            rearrange = function() {
                list.masonry({
                    itemSelector: 'li'
                });
            };
        rearrange();
    });
}

generateMasonry($('.product_list'));
$(window).resize(function() {
    generateMasonry($('.product_list'));
});

var full_navigation = $('.full_navigation');
$('header .burger').click(function() {
    if ($(window).width() < 575) {
        if (full_navigation.is(':visible')) {
            full_navigation.slideUp();
        } else {
            full_navigation.slideDown();
        }
    }
});

(function SearchBoxWatcher() {

    var oldItemCount = 0,
        timeoutCount = 0,
        searchHackTimeout = null,
        searchResults,
        searchBox = $('#tictail_search_box'),
        contentContainer = $('.content_container'),
        searchContainer = $('#search_container');

    var init = function() {
        searchBox.keyup(function(){

            if (searchBox.val() == "") {
                contentContainer.fadeIn();
                searchBox.removeClass('search-loading');
            } else {
                searchBox.removeClass('search-loading');
                setTimeout(function() {
                    searchBox.addClass('search-loading');
                }, 200);
            }
            watch();
        });
        searchContainer.hide();
        $('#search-trigger').click(function() {
            if (searchContainer.is(':hidden')) {
                searchContainer.slideDown();
            } else {
                searchContainer.slideUp();
            }
        });
    };

    var watch = function() {
        removeMysteriousExtraResultBox();

        clearTimeout(searchHackTimeout);
        searchResults = $('.tictail_search_results');

        if (searchBox.val() == "") {
            contentContainer.fadeIn();
        } else {
            contentContainer.fadeOut();
            searchResults.css('visibility', 'hidden');
            searchHackTimeout = setTimeout(function() {
                var items = searchResults.find('.item');

                if (items.size() !== 0) {
                    reRenderSearch(items);
                } else {
                    watch();
                }
            }, 100);
        }
    };

    var removeMysteriousExtraResultBox = function() {
        searchContainer.find('.results_box').each(function() {
            var me = $(this);
            if (!me.hasClass('tictail_search_results')){
                me.remove();
            }
        });
    }

    var reRenderSearch = function(items) {
        var container = $('<ul class="product_list">');
        items.each(function() {
            var item = $(this),
                newItem = $('<li>'),
                href = item.find('a').attr('href'),
                title = item.find('.title').text(),
                price = item.find('.price').html(),
                image = item.find('.thumb img').attr('src'),
                image = image.replace(/product\/50\//, 'product\/300\/');

            newItem.html("<a href='"+href+"'>\
                <div class='image_container'>\
                    <img src='"+image+"' alt='"+title+"'>\
                </div>\
                <div class='info'>\
                    <h2>"+title+"</h2>\
                    <h4 class='price'>"+price+"</h4>\
                </div>\
            </a>");
            container.append(newItem);
        });
        searchResults.html(container);
        generateMasonry(container);
        searchResults.hide().css('visibility', 'visible');
        searchResults.fadeIn();
    };

    init();
})();

</script>

{{> tictail/misc}}

<script id="theme-builder" src="/theme-builder.js"></script>

</body>
</html>

