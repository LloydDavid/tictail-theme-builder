<!DOCTYPE html>
<html lang="en">
<head>

    <title>
        {{store_name}}
        {{! Add the label of the current navigation item on list pages }}
        {{#list_page}}{{#navigation}}{{#is_current}}- {{label}}{{/is_current}}{{/navigation}}{{/list_page}}
        {{! Add the product title on product pages }}
        {{#product_page}}{{#product}}- {{title}}{{/product}}{{/product_page}}
        {{! Add "About" on the about page }}
        {{#about_page}}- {{#lang}}About{{/lang}}{{/about_page}}
    </title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">

    <link href="{{assets_url}}/771/css/anythingslider.css" rel="stylesheet" type="text/css">
    <link href="{{assets_url}}/shared/css/base.css" rel="stylesheet" type="text/css">
    <link href='//fonts.googleapis.com/css?family=Abel' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Arvo:400,700' rel='stylesheet' type='text/css'>

    <link href="/style.css" rel="stylesheet" type="text/css">
    <link href="/dropkick.css" rel="stylesheet" type="text/css">

    <!--[if lt IE 9]>
    <script src="{{assets_url}}/shared/js/html5shiv.js"></script>
    <![endif]-->
</head>
<body>


<a href="#" class="burger">
    <span class="line"></span>
    <span class="line"></span>
    <span class="line"></span>
</a>

<div class="search-box">
    <a href="#" class="search-icon">Search</a>
    {{{search}}}
</div>

<nav class="navigation">
    <ul>
        <li class="navigation_item {{#list_page}}{{#no_current_navigation}}selected{{/no_current_navigation}}{{/list_page}}">
            <a href="{{store_url}}">
                {{#lang}}All items{{/lang}}
            </a>
        </li>
        {{#navigation}}
        <li class="navigation_item {{#is_current}}selected{{/is_current}}">
            <a href="{{url}}">
                {{label}}
            </a>
            {{#is_current}}
                {{#has_children}}
                    <ul class="sub_navigation">
                        {{#children}}
                            <li {{#is_current}} class="selected"{{/is_current}}>
                                <a href="{{url}}">
                                    {{label}}
                                </a>
                            </li>
                        {{/children}}
                    </ul>
                {{/has_children}}
            {{/is_current}}
        </li>
        {{/navigation}}
    </ul>
    <ul class="mobile-only">
        <li id="about_link" class="store_link {{#about_page}}selected{{/about_page}}">
            <a href="{{store_url}}/about">
                {{#lang}}About{{/lang}}
            </a>
        </li>
        {{#store_blog_url}}
        <li id="blog_link" class="store_link">
            <a href="{{store_blog_url}}" target="_blank">
                {{#lang}}Blog{{/lang}}
            </a>
        </li>
        {{/store_blog_url}}
        <li>
            {{#return_policy}}
                {{#lang}}Return Policy{{/lang}}
            {{/return_policy}}
        </li>
        <li>
            {{#terms}}
                {{#lang}}Terms &amp; Conditions{{/lang}}
            {{/terms}}
        </li>
    </ul>
</nav>

<div class="logotype-container {{#logotype}}with_logotype{{/logotype}} {{#no_logotype}}without_logotype{{/no_logotype}}">
    <a class="logotype" href="{{store_url}}">
        {{#logotype}}
            <img src="{{url-300}}" alt="{{store_name}}">
        {{/logotype}}
        {{#no_logotype}}
            <span class="store_name">
                {{store_name}}
            </span>
        {{/no_logotype}}
    </a>
</div>

<div class="content_container">
    {{{yield}}}
</div>

<footer>
    <ul>
        <li id="about_link" class="desktop_only {{#about_page}}selected{{/about_page}}">
            <a href="{{store_url}}/about">
                {{#lang}}About{{/lang}}
            </a>
        </li>
        {{#store_blog_url}}
        <li id="blog_link" class="desktop_only store_link">
            <a href="{{store_blog_url}}" target="_blank">
                {{#lang}}Blog{{/lang}}
            </a>
        </li>
        {{/store_blog_url}}
        <li class="desktop_only">
            {{#return_policy}}
                {{#lang}}Return Policy{{/lang}}
            {{/return_policy}}
        </li>
        <li class="desktop_only">
            {{#terms}}
                {{#lang}}Terms &amp; Conditions{{/lang}}
            {{/terms}}
        </li>
        {{#store_email}}
            <li class="footer-contact">
                Contact: <a href="mailto:{{store_email}}">{{#lang}}{{store_email}}{{/lang}}</a>
            </li>
        {{/store_email}}
    </ul>
</footer>


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
<script src="{{assets_url}}/771/jquery.dropkick-1.0.0.js"></script>
<script>
$('.tictail_variations_select').dropkick({
    width: 160,
    height: 30
});
</script>

<script>

var navigation = $('.navigation');
$('.burger').click(function(e) {
    e.preventDefault();
    if ($(window).width() < 575) {
        if (navigation.is(':visible')) {
            navigation.slideUp();
        } else {
            navigation.slideDown();
        }
    } else {
        if (navigation.hasClass('open')) {
            navigation.removeClass('open');
            $('body').removeClass('navigation-open');
        } else {
            navigation.addClass('open');
            $('body').addClass('navigation-open');
        }
    }
    return false;
});

var searchBox = $('.search-box');
$('.search-icon').click(function(e) {
    e.preventDefault();
    if (searchBox.hasClass('open')) {
        searchBox.removeClass('open');
    } else {
        searchBox.addClass('open');
    }
    return false;
});

if ($(window).width() > 575) {
    if ($('#products').size() > 0) {
        $(window).load(function() {
            var totalWidth = 0;
            $('.product_list li').each(function() {
                totalWidth += $(this).width();
            });
            $('.product_list').width(totalWidth);
            $('.content_container').width(totalWidth);
            $('body').width(totalWidth+30);
        });
    }

    if ($('#product').size() > 0) {
        $(window).load(function() {
            var totalWidth = 0,
                productsImagesWidth = 0,
                relatedProductsWidth = 0;

            $('.product_images img').each(function() {
                productsImagesWidth += $(this).outerWidth(true);
            });

            relatedProductsWidth += $('.related_products_title').outerWidth(true);
            $('.product_list li').each(function() {
                relatedProductsWidth += $(this).width();
            });
            $('.related_products').width(relatedProductsWidth+30);

            totalWidth += $('.product_info').outerWidth(true);
            totalWidth += productsImagesWidth;
            totalWidth += relatedProductsWidth;
            $('.content_container').width(totalWidth+30);
            $('body').width(totalWidth+30);
        });
    }

    // http://adomas.org/javascript-mouse-wheel/
    (function(e){function r(t){var n=t||window.event,r=[].slice.call(arguments,1),i=0,s=true,o=0,u=0;t=e.event.fix(n);t.type="mousewheel";if(n.wheelDelta){i=n.wheelDelta/120}if(n.detail){i=-n.detail/3}u=i;if(n.axis!==undefined&&n.axis===n.HORIZONTAL_AXIS){u=0;o=-1*i}if(n.wheelDeltaY!==undefined){u=n.wheelDeltaY/120}if(n.wheelDeltaX!==undefined){o=-1*n.wheelDeltaX/120}r.unshift(t,i,o,u);return(e.event.dispatch||e.event.handle).apply(this,r)}var t=["DOMMouseScroll","mousewheel"];if(e.event.fixHooks){for(var n=t.length;n;){e.event.fixHooks[t[--n]]=e.event.mouseHooks}}e.event.special.mousewheel={setup:function(){if(this.addEventListener){for(var e=t.length;e;){this.addEventListener(t[--e],r,false)}}else{this.onmousewheel=r}},teardown:function(){if(this.removeEventListener){for(var e=t.length;e;){this.removeEventListener(t[--e],r,false)}}else{this.onmousewheel=null}}};e.fn.extend({mousewheel:function(e){return e?this.bind("mousewheel",e):this.trigger("mousewheel")},unmousewheel:function(e){return this.unbind("mousewheel",e)}})})(jQuery)

    $("html, body, *").mousewheel(function(event, delta) {
        this.scrollLeft -= (delta * 30);
        event.preventDefault();
    });

    function setBodySize() {
        $('body').height($('html').height() - 20 - parseInt($('body').css('padding-top'), 10));
    }
    $(window).resize(setBodySize);
    setBodySize();
}

</script>

